    <!-- Best: 우수 놀이시설 -->
    <section class="bg-light page-section" id="best">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 text-center">
              <h2 class="section-heading text-uppercase">우수 놀이시설</h2>
              <h3 class="section-subheading text-muted">경기도 내의 안전하고 우수한 어린이 놀이시설 현황입니다.<br>
              아동 연령을 고려한 동선 배치 및 지형 활용, 친환경 소재를 활용한 놀이공간 등이 특징입니다.</h3>
            </div>
          </div>
          <div class="row text-center">

            <% bestFacilities.forEach(function (item, index) { %>
            <div class="col-md-4">
              <span class="fa-stack fa-4x">
                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                <i class="<%= icons[index] %> fa-stack-1x fa-inverse"></i>
              </span>
              <h4 class="service-heading"><%= item.name %></h4>
              <p class="text-muted">
                  지역 : <%= item.cityName %><br>
                  전화번호 : <%= item.tel %><br>
                  주소 : <%= item.addr %><br>
              </p>
            </div>
            <% }); %>

          </div>
        </div>
    </section>