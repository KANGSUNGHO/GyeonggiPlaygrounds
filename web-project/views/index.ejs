    <!-- Header -->
    <header class="masthead">
      <div class="container">
        <div class="intro-text">
          <div class="intro-lead-in">환영합니다!</div>
          <div class="intro-heading text-uppercase">어린이 놀이시설 정보</div>
          <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#search">내 주변시설 검색</a>
        </div>
      </div>
    </header>

    <!-- Best: 우수 놀이시설 -->
    <section class="page-section" id="best">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">우수 어린이 놀이시설</h2>
            <h3 class="section-subheading text-muted">경기도 내의 안전하고 우수한 어린이 놀이시설 현황입니다.<br>
            아동 연령을 고려한 동선 배치 및 지형 활용, 친환경 소재를 활용한 놀이공간 등이 특징입니다.</h3>
          </div>
        </div>
        <div class="row text-center">
          <div class="col-md-4">
            <span class="fa-stack fa-4x">
              <i class="fas fa-circle fa-stack-2x text-primary"></i>
              <i class="fas fa-shopping-cart fa-stack-1x fa-inverse"></i>
            </span>
            <h4 class="service-heading"><%= bestFacilities[0].name %></h4>
            <p class="text-muted">
              지역 : <%= bestFacilities[0].cityName %><br>
              전화번호 : <%= bestFacilities[0].tel %><br>
              주소 : <%= bestFacilities[0].addr %><br>
              위도 : <%= Number(bestFacilities[0].lat).toFixed(2) %> /
              경도 : <%= Number(bestFacilities[0].logt).toFixed(2) %>
            </p>
          </div>
          <div class="col-md-4">
            <span class="fa-stack fa-4x">
              <i class="fas fa-circle fa-stack-2x text-primary"></i>
              <i class="fas fa-laptop fa-stack-1x fa-inverse"></i>
            </span>
            <h4 class="service-heading"><%= bestFacilities[1].name %></h4>
            <p class="text-muted">
                지역 : <%= bestFacilities[1].cityName %><br>
                전화번호 : <%= bestFacilities[1].tel %><br>
                주소 : <%= bestFacilities[1].addr %><br>
                위도 : <%= Number(bestFacilities[1].lat).toFixed(2) %> /
                경도 : <%= Number(bestFacilities[1].logt).toFixed(2) %>
              </p>
          </div>
          <div class="col-md-4">
            <span class="fa-stack fa-4x">
              <i class="fas fa-circle fa-stack-2x text-primary"></i>
              <i class="fas fa-lock fa-stack-1x fa-inverse"></i>
            </span>
            <h4 class="service-heading"><%= bestFacilities[2].name %></h4>
            <p class="text-muted">
                지역 : <%= bestFacilities[2].cityName %><br>
                전화번호 : <%= bestFacilities[2].tel %><br>
                주소 : <%= bestFacilities[2].addr %><br>
                위도 : <%= Number(bestFacilities[2].lat).toFixed(2) %> /
                경도 : <%= Number(bestFacilities[2].logt).toFixed(2) %>
              </p>
          </div>
        </div>
      </div>
    </section>

    
    <!-- 지역 선택 화면 -->
    

    <!-- Team: 개발자 정보 -->
    <section class="bg-light page-section" id="team">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">개발자 소개</h2>
            <h3 class="section-subheading text-muted">가천대학교 컴퓨터공학과 재학</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="team-member">
              <img class="mx-auto rounded-circle" src="/img/team/ksh.png" alt="강성호">
              <h4>강성호</h4>
              <p class="text-muted">Sungho Kang</p>
              <ul class="list-inline social-buttons">
                <li class="list-inline-item">
                  <a href="#">
                    <i class="fab fa-github"></i>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a href="#">
                    <i class="fab fa-facebook-f"></i>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a href="#">
                    <i class="fa fa-envelope"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="team-member">
              <img class="mx-auto rounded-circle" src="/img/team/ysh.png" alt="유석환">
              <h4>유석환</h4>
              <p class="text-muted">Seokhwan You</p>
              <ul class="list-inline social-buttons">
                <li class="list-inline-item">
                  <a href="#">
                    <i class="fab fa-github"></i>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a href="#">
                    <i class="fab fa-facebook-f"></i>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a href="#">
                    <i class="fa fa-envelope"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 mx-auto text-center">
            <p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact: 컨택트 -->
    <section class="page-section" id="contact">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">Contact Us</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <form id="contactForm" name="sentMessage" novalidate="novalidate">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <input class="form-control" id="name" type="text" placeholder="Your Name *" required="required" data-validation-required-message="Please enter your name.">
                    <p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group">
                    <input class="form-control" id="email" type="email" placeholder="Your Email *" required="required" data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group">
                    <input class="form-control" id="phone" type="tel" placeholder="Your Phone *" required="required" data-validation-required-message="Please enter your phone number.">
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <textarea class="form-control" id="message" placeholder="Your Message *" required="required" data-validation-required-message="Please enter a message."></textarea>
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                  <div id="success"></div>
                  <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Send Message</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
  
